<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notification"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.abdo.remusix.CommentsActivity"
    android:orientation="vertical">

    >


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="clip_horizontal"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pic" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/img"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="jony Blacke"
                    android:textColor="@android:color/background_light"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/img"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="1 hours ago"
                    android:textColor="@android:color/background_light"
                    android:textSize="10dp"

                    />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="20dp"
                    android:outlineAmbientShadowColor="@color/cardview_dark_background"
                    android:shadowColor="@android:color/background_light" />


            </RelativeLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="10dp"
                >

                <ImageView
                    android:id="@+id/singer_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/amrd"

                    >


                </ImageView>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"

                android:layout_marginRight="20dp"
                android:background="@color/notification" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/min"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/infoaboutsong"

                    />

                <TextView
                    android:id="@+id/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="256"
                    android:textColor="@android:color/background_light" />

                <ImageView
                    android:id="@+id/comment_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="60dp"
                    android:src="@drawable/comment"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/liks_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2k"
                    android:textColor="@android:color/background_light"

                    />

                <ImageView
                    android:id="@+id/liks_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/like"
                    android:layout_marginLeft="10dp"

                    />

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_listview"
         android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:dividerHeight="10dp"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/comments_listitem"
        ></ListView>
</LinearLayout>